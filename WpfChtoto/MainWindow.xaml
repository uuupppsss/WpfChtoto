<Window x:Class="WpfChtoto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChtoto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>

            <TabItem Header="Найти">
                <StackPanel>
                    <Label Content="Имя"/>
                    <TextBox Height="30" />
                    <Label Content="Фамилия"/>
                    <TextBox Height="30" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Height="30" Margin="10" Width="100" Content="Найти паспорт"/>
                        <Button Height="30" Margin="10" Width="100" Content="Найти снилс"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="Создать паспорт">
                <StackPanel>
                    <Label Content="Имя"/>
                    <TextBox  Height="30" />
                    <Label Content="Фамилия"/>
                    <TextBox  Height="30" />
                    <Label Content="Серия и номер паспорта"/>
                    <TextBox  Height="30" />
                    <Label Content="Дата выдачи"/>
                    <TextBox  Height="30" />
                    <Label Content="РОВД"/>
                    <TextBox  Height="30" />
                    <Button Height="30" Margin="10" Width="100" Content="Создать"/>
                    
                </StackPanel>
            </TabItem>

            <TabItem Header="Создать снилс">
                <StackPanel>
                    <Label Content="Имя"/>
                    <TextBox  Height="30" />
                    <Label Content="Фамилия"/>
                    <TextBox  Height="30" />
                    <Label Content="Номер снилса"/>
                    <TextBox  Height="30" />
                    <Button Height="30" Margin="10" Width="100" Content="Создать"/>

                </StackPanel>
            </TabItem>
        </TabControl>
        

    </Grid>
</Window>
